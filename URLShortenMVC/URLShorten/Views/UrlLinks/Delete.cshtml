@model URLShorten.Data.Entities.UrlLink

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>UrlLink</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginalUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortenedUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortenedUrl)
        </dd>
    </dl>

    <form>
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-danger btn-sm" onclick="deleteUrlLink(@Model.Id)">Delete</button>
        <button type="button" class="btn btn-outline-primary btn-sm" onclick="closeModal(); return false;">Cancel</button>
    </form>
</div>
